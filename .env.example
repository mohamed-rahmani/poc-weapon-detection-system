# Example .env file for Weapon Detection API
# Copy this file to .env and adjust values as needed

# API Settings
APP_NAME="Weapon Detection API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Settings (adjust for production)
# ALLOWED_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# Model Settings
MODEL_PATH=best.pt
CONFIDENCE_THRESHOLD=0.4
IOU_THRESHOLD=0.45
MAX_DETECTIONS=100

# GPU Settings
DEVICE=cuda
HALF_PRECISION=true

# Image Processing
MAX_IMAGE_SIZE=10485760  # 10MB
# ALLOWED_IMAGE_FORMATS=[".jpg", ".jpeg", ".png", ".bmp", ".webp"]

# Video Processing
VIDEO_FPS=30
VIDEO_FRAME_SKIP=0
MAX_VIDEO_DURATION=300  # 5 minutes

# Logging
LOG_LEVEL=INFO
